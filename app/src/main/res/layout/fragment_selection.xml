<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@android:color/black">

        <ImageView
            android:id="@+id/fake_action_bar_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:contentDescription="@null"
            android:layout_margin="8dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/fake_action_bar_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:contentDescription="@null"
            android:padding="@dimen/info_button_padding"
            android:src="@android:drawable/ic_dialog_info" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/selector_memory_game_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:background="@android:color/holo_blue_bright">

        <ImageView
            android:id="@+id/selector_memory_game_image_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/only_memory_background" />

        <ImageView
            android:id="@+id/selector_memory_game_image_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/only_memory_background" />

        <ImageView
            android:id="@+id/selector_memory_game_image_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/only_memory_background" />

        <ImageView
            android:id="@+id/selector_memory_game_image_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/only_memory_background" />

        <ImageView
            android:id="@+id/selector_memory_game_image_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/only_memory_background" />

        <TextView
            android:id="@+id/selector_memory_game_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/base_padding"
            android:text="@string/selector_start_memory_game"
            android:textSize="@dimen/selector_button_text_size"
            android:textStyle="bold" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/selector_boat_game_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_light">

        <ImageView
            android:id="@+id/selector_boat_game_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:rotation="30"
            android:src="@drawable/only_boat" />

        <TextView
            android:id="@+id/selector_boat_game_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/base_padding"
            android:text="@string/selector_start_boat_game"
            android:textSize="@dimen/selector_button_text_size"
            android:textStyle="bold" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/selector_flower_game_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_dark">

        <ImageView
            android:id="@+id/selector_flower_guy_image"
            android:layout_width="@dimen/game_image_size"
            android:layout_height="@dimen/game_image_size"
            android:contentDescription="@null"
            android:src="@drawable/only_guy" />

        <ImageView
            android:id="@+id/selector_flower_girl_image"
            android:layout_width="@dimen/game_image_size"
            android:layout_height="@dimen/game_image_size"
            android:contentDescription="@null"
            android:src="@drawable/only_girl" />

        <ImageView
            android:id="@+id/selector_flower_flower_image"
            android:layout_width="@dimen/game_image_size"
            android:layout_height="@dimen/game_image_size"
            android:contentDescription="@null"
            android:src="@drawable/only_flower" />

        <TextView
            android:id="@+id/selector_flower_game_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/base_padding"
            android:text="@string/selector_start_flower_game"
            android:textSize="@dimen/selector_button_text_size"
            android:textStyle="bold" />

    </FrameLayout>

</LinearLayout>